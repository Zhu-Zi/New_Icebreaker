@{
    Layout = null;
}
@using Icebreaker.Controllers;
@using System.Data;
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" href="@Url.Content("../../favicon.ico")" />

    <title>成绩查询结果</title>

    <!-- Bootstrap core CSS -->
    <link href="@Url.Content("~/Content/StyleSheet/bootstrap.min.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Content/StyleSheet/bootstrap-theme.min.css")" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/Content/StyleSheet/mainStyleSheet.css")" rel="stylesheet" />



    <script type="text/javascript" src="@Url.Content("~/Content/Javascript/jquery-1.11.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Javascript/bootstrap.js")"></script>
    <script>
        var back = function () {
            history.go(-1);
        }
    </script>
    <script>
        function getUser() {
           
            window.location.href = "/ScoreView/Index";
        }
    </script>
</head>
<body>
    <h1 class="text-center">萌萌哒地查成绩－结果</h1>
    <div class="container">


        <button onclick="back()" class="btn btn-info">返回</button>
        

        <table class="table" id="tbList">
            <thead id=" tableHead">
                <tr>
                    <th nowrap>学年</th>
                    <th nowrap>课程名称</th>
                    <th nowrap>选修/必修</th>
                    <th nowrap>选修类别</th>
                    <th nowrap>学分</th>
                    <th nowrap>成绩</th>
                    <th nowrap>绩点</th>
                    <th nowrap>补考成绩</th>
                    <th nowrap>学期</th>
                    <th nowrap>开课学院名称</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in ViewData["TableData"] as List<Icebreaker.ViewModels.ViewScoreTable>)
                {
                    <tr>
                        <td>@a.Year</td>
                        <td>@a.Course</td>
                        <td>@a.Obligatory</td>
                        <td>@a.ObligatoryClass</td>
                        <td>@a.Credit</td>
                        <td>@a.Score</td>
                        <td>@a.GreadPoint</td>

                        <td>@a.LastScore</td>
                        <td>@a.Semester</td>
                        <td>@a.CollageName</td>
                    </tr>
                }
            </tbody>
        </table>
        <button onclick="getUser()" class="btn btn-info" style="margin-bottom:5px"> ^_^ 宝宝大学的心路历程 ^_^ </button>
        <div style="font-size:40px;margin-left:70px" >
            <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span>
        </div>

    </div>

    <div class="container">
        <table class="table" id="tbList">
            <thead id=" tableHead">
                <tr>
                    <th nowrap>课程性质名称</th>
                    <th nowrap>学分要求</th>
                    <th nowrap>获得学分</th>
                    <th nowrap>未通过学分</th>
                    <th nowrap>还需学分</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in ViewData["CreditA"] as List<Icebreaker.ViewModels.ViewCreditATable>)
                {
                    <tr>
                        <td>@a.CourseNature</td>
                        <td>@a.CreditRequirements</td>
                        <td>@a.GotCredit</td>
                        <td>@a.NotPassdeCredit</td>
                        <td>@a.NeedCredit</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="container">
        <table class="table" id="tbList">
            <thead id=" tableHead">
                <tr>
                    <th nowrap>课程归属名称</th>
                    <th nowrap>学分要求</th>
                    <th nowrap>获得学分</th>
                    <th nowrap>未通过学分</th>
                    <th nowrap>还需学分</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in ViewData["CreditB"] as List<Icebreaker.ViewModels.ViewCreditBTable>)
                {
                    <tr>
                        <td>@a.CourseOwnership</td>
                        <td>@a.CreditRequirements</td>
                        <td>@a.GotCredit</td>
                        <td>@a.NotPassdeCredit</td>
                        <td>@a.NeedCredit</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="container">
        <table class="table" id="tbList">
            <thead id=" tableHead">
                <tr>
                    <th nowrap>课程代码</th>
                    <th nowrap>课程名称</th>
                    <th nowrap>学分</th>
                    <th nowrap>课程性质</th>
                    <th nowrap>最高成绩值</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in ViewData["NoPassClass"] as List<Icebreaker.ViewModels.ViewNotPassedCourseTable>)
                {
                    <tr>
                        <td>@a.CourseNumber</td>
                        <td>@a.Course</td>
                        <td>@a.Credit</td>
                        <td>@a.CourseNature</td>
                        <td>@a.HighestGrade</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @*<h3>@ViewData["JiDian"]</h3>*@

</body>
</html>
